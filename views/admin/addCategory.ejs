<%- include ('../_layouts/admin_header.ejs') %> 

<h2 class="page-title">Add a Category</h2>
<a href="/admin/categories" class="btn btn-primary">Back to all categories</a>
<br>
<br>

<form action="/admin/add-category" method="POST">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" id="title" class="form-control" name="title" value="<%= title %>" placeholder="Title">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>

