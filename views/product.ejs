<%- include ('_layouts/header') %>

<div class="row">
    <h1 class="page-header"><%= product.title %></h1>

    <div class="col-xs-12 col-md-5">
        <img class="spi" src="/product_images/<%= product._id %>/<%= product.image %>" alt="<%= product.title %>">
        <br>
    </div>
    <div class="col-sx-12 col-md-7">
        <p><%= product.desc %></p>
        <p><%= parseFloat(product.price).toFixed(2) %> â‚¬</p>
        <% if(typeof loggedIn != 'undefined' && loggedIn == true) { %>
            <p><a href="/cart/add/<%= product.slug %>">Add to cart</a></p>
        <% } else { %>
            <p>You must be logged in to purchased items. <a href="/users/login">Log in</a></p>
        <% } %>
    </div>
</div>

