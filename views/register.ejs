<%- include ('_layouts/header') %>

<h1><%= title %></h1>

<form action="/users/register" method="POST">

    <div class="form-group">
        <label>Name</label>
        <input type="text" name="name" class="form-control" placeholder="Name" value="<%= typeof name != 'undefined' ? name : '' %>">
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="email" name="email" class="form-control" placeholder="Email" value="<%= typeof email != 'undefined' ? email : '' %>">
    </div>

    <div class="form-group">
        <label>Username</label>
        <input type="text" name="username" class="form-control" placeholder="username" value="<%= typeof username != 'undefined' ? username : '' %>">
    </div>

    <div class="form-group">
        <label>Password</label>
        <input type="password" name="password" class="form-control" placeholder="Password" value="<%= typeof password != 'undefined' ? password : '' %>">
    </div>

    <div class="form-group">
        <label>Confirm Password</label>
        <input type="password" name="confirmPassword" class="form-control" placeholder="Confirm Password" value="<%= typeof confirmPassword != 'undefined' ? confirmPassword : '' %>">
    </div>

    <button type="Submit" class="btn btn-default">Register</button>
</form>

 <%- include ('_layouts/footer') %>
